<div class="container">
  <h1>
    <%=@senior.name%> - <%=@senior.age%> - <%= @senior.key_skill %>
  </h1>

  <div>
    <%= cl_image_tag @senior.photo.key, height: 300, width: 400, crop: :fill %>
  </div>

<div class="container">
  <%= simple_form_for [@senior, @booking] do |f| %>
   <%= f.input :datetime,
            as: :string,
            input_html: { data: { controller: "datetimepicker" } } %>
  <%= f.submit "Book a date", class: "btn btn-primary" %>
<% end %>
</div>

<%= link_to "Back to Results", seniors_path%>
</div>
