<div class="container-show">
  <div class="senior-card-show card">
    <div class="senior-card-content">
      <h1 class="senior-title">
        <%= @senior.name %> - <%= @senior.age %>
      </h1>

      <h2 class="senior-skill">
        <i class="fa-solid"></i>
        <%= @senior.key_skill %>
        <i class="fa-solid"></i>
      </h2>

      <% if @senior.photo.present? %>
        <%= cl_image_tag @senior.photo.key, class: "senior-photo" %>
      <% else %>
        <p class="no-photo">No photo available</p>
      <% end %>

      <p class="senior-summary">
        <%= @senior.summary %>
      </p>



      <div id="booking_request_form" data-controller="senior-booking">
        <a href="" id="request_booking" class="btn btn-primary">Réserver un moment avec <%= @senior.name %></a>
        <div id="request_form" class="d-none">
          <%= simple_form_for [@senior, @booking] do |f| %>
            <%= f.input :datetime, as: :string, input_html: { data: { controller: "datetimepicker" } } %>
            <%= f.submit "Valider la demande", class: "btn btn-primary" %>
            <% end %>
        </div>
      </div>




      <div class="retour">
        <%= link_to "Retour aux résultats", seniors_path %>
      </div>
    </div>
  </div>

  <div class="map-card">
    <div class="map-container-show"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

<div style="height: 300px"></div>
