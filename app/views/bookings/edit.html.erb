<div class="container">
<div class="senior-container w-50 mx-auto border p-5 rounded rounded-10 shadow-sm">
  <h1 style="color : #d70466">
    <strong>Confirmer le rendez-vous</strong>
  </h1>

  <h2>
      <div>pour <strong><%=@senior.name%></strong></div>
      <div class="mt-3">le <strong><%=@booking.datetime.strftime("%d/%m/%Y à %IH%M")%></strong></div>
  </h2>
  <div style="height: 50px"></div>
  <div class="mt-10">
   <%= simple_form_for [@senior, @booking] do |f| %>
    <%= f.input :status, label: false, as: :select, collection: ["à confirmer","Confirmé", "Annulé"] %>
    <div style="height: 10px"></div>
    <%= f.button :submit, "Appliquer", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
<div class="retour pt-5 pl-5">
<%= link_to "Retour", dashboard_path%>
</div>
</div>

<div style="height: 300px"></div>
